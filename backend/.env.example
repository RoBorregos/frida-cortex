# Backend API Key for securing endpoints
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
BACKEND_API_KEY=your-secure-api-key-here

# OpenRouter API Key (required for LLM access)
OPENROUTER_API_KEY=your-openrouter-api-key

# Allowed CORS Origins (comma-separated, use your Vercel domain in production)
# Example: https://your-app.vercel.app,https://your-app-preview.vercel.app
ALLOWED_ORIGINS=*

# Port (optional, defaults to 8080)
PORT=8080
